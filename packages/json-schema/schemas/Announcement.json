{
  "title": "Announcement",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema-json.announcing.app/Announcement.json",
  "type": "object",
  "required": ["updated", "info"],
  "properties": {
    "updated": {
      "$ref": "refs/Date.json"
    },
    "info": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "posts": {
      "type": "array",
      "nullable": true,
      "items": { "$ref": "refs/Post.json" }
    },
    "refs": {
      "type": "array",
      "nullable": true
    }
  }
}
